<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="9562a2d3-abc3-4106-8350-de60a6c95a35" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/9.0/project-config.xsd">
  <name>Network Health</name>
  <description>Route Health</description>
  <settings>
    <options>
      <option name="artifactRules" value="./mtr.out" />
    </options>
    <parameters />
    <build-runners>
      <runner id="RUNNER_17" name="ansible the things" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[echo "Checking for config files"
[[ -f ansible/ansible.cfg && -f ansible/hosts && -f ansible/plays/sysconfig.yml  ]] || exit 1
echo "Config found"

echo "Copy config locally"
rsync ansible/ansible.cfg ~/.ansible.cfg
echo "Running playbook"
sudo ansible-playbook -i ansible/hosts ansible/plays/sysconfig.yml]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="ansible">
        <checkout-rule rule="+:.=&gt;ansible" />
      </vcs-entry-ref>
    </vcs-settings>
    <requirements />
    <build-triggers />
    <build-extensions>
      <extension id="perfmon" type="perfmon">
        <parameters />
      </extension>
    </build-extensions>
    <cleanup />
  </settings>
</build-type>

