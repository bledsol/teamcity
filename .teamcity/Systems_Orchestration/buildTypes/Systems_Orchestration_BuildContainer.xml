<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="4c2e58bc-7548-45f5-aa32-9cc99bc7a589" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/9.0/project-config.xsd">
  <name>Build Container</name>
  <description>Build a lxc container</description>
  <settings>
    <parameters>
      <param name="param.CONFIG" value="/etc/lxc/guest.conf" spec="text regexp='/etc/lxc/guest.conf' description='path to config usually: /etc/lxc/guest.conf' label='Container config' validationMode='not_empty' display='hidden'" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_33" name="" type="simpleRunner">
        <parameters>
          <param name="script.content" value="lxc-create -t %param.GUEST% -n %param.NAME% -f %param.CONFIG%" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings />
    <requirements />
    <build-triggers />
    <cleanup />
  </settings>
</build-type>

